<div class="container mt-4">
  <h1>Tip Calculation Records</h1>
  <div class="mb-2">
    <%= link_to 'Create', calculator_new_path, class: 'btn btn-success' %>
  </div>
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Bill Amount</th>
        <th>Tip Percentage</th>
        <th>Tip Amount</th>
        <th>Total Bill</th>
        <th>Number of People</th>
        <th>Per Person Amount</th>
        <th>Timestamp</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% if @tip_calculations.present? %>
      <% @tip_calculations.each do |calculation| %>
        <tr>
          <td>$<%= calculation.bill_amount %></td>
          <td><%= calculation.tip_percentage %>%</td>
          <td>$<%= calculation.tip_amount %></td>
          <td>$<%= calculation.total_bill %></td>
          <td><%= calculation.num_people %></td>
          <td>$<%= calculation.per_person_amount %></td>
          <td><%= calculation.timestamp.strftime('%d-%m-%Y %H:%M') %></td>
          <td>
            <%= link_to 'Edit', calculator_edit_path(calculation), class: 'btn btn-primary' %>
            <%= form_with url: calculator_destroy_path(calculation), method: :delete, data: { confirm: 'Are you sure?' }, local: true do %>
              <%= submit_tag 'Delete', class: 'btn btn-danger' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
        <tr>
          <td colspan="100%" class="text-center">No Records Found.</td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
