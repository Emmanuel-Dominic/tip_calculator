<h1 class="mb-4">Tip Calculator</h1>

<div class="card">
  <div class="card-body">
    <% if alert %>
      <div class="alert alert-danger"><%= alert %></div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>
    <%= form_with(model: @tip_calculation, url: calculator_create_path, method: :post, local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :bill_amount, "Bill Amount ($)", class: "form-label" %>
        <%= form.number_field :bill_amount, step: "0.01", required: true, class: "form-control", min: 0 %>
      </div>

      <div class="mb-3">
        <%= form.label :tip_percentage, "Tip Percentage (%)", class: "form-label" %>
        <%= form.number_field :tip_percentage, step: "0.01", required: true, class: "form-control", min: 0, max: 100 %>
      </div>

      <div class="mb-3">
        <%= form.label :num_people, "Number of People", class: "form-label" %>
        <%= form.number_field :num_people, min: 1, required: true, class: "form-control" %>
      </div>

      <%= submit_tag "Calculate Tip", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
