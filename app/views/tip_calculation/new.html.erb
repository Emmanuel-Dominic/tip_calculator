<h1 class="mb-4">Tip Calculator</h1>

<div class="card">
  <div class="card-body">
    <% if alert %>
      <div class="alert alert-danger"><%= alert %></div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>
    <%= form_with(url: calculator_create_path, method: :post, local: true) do |f| %>
      <div class="mb-3">
        <%= label_tag :bill_amount, "Bill Amount ($)", class: "form-label" %>
        <%= number_field_tag :bill_amount, nil, step: "0.01", required: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= label_tag :tip_percentage, "Tip Percentage (%)", class: "form-label" %>
        <%= number_field_tag :tip_percentage, nil, step: "0.01", required: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= label_tag :num_people, "Number of People", class: "form-label" %>
        <%= number_field_tag :num_people, nil, min: 1, required: true, class: "form-control" %>
      </div>

      <%= submit_tag "Calculate Tip", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
