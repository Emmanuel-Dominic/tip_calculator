<div class="card">
  <div class="card-header">
    <h2>Tip Calculation Result</h2>
  </div>
    <div class="card-body">
      <% if @tip_calculation %>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <strong>Bill Amount:</strong> $<%= @tip_calculation.bill_amount %>
        </li>
        <li class="list-group-item">
          <strong>Tip Percentage:</strong> <%= @tip_calculation.tip_percentage %>%
        </li>
        <li class="list-group-item">
          <strong>Tip Amount:</strong> $<%= @tip_calculation.tip_amount %>
        </li>
        <li class="list-group-item">
          <strong>Total Bill:</strong> $<%= @tip_calculation.total_bill %>
        </li>
        <li class="list-group-item">
          <strong>Per Person Amount:</strong> $<%= @tip_calculation.per_person_amount %>
        </li>
        <li class="list-group-item">
          <strong>Number of People:</strong> <%= @tip_calculation.num_people %>
        </li>
      </ul>
      <% else %>
        <p class="text-center">Record not found</p>
      <% end %>
    </div>
  <div class="card-footer text-center">
    <%= link_to "Back to Calculator", calculator_new_path, class: "btn btn-primary" %>
  </div>
</div>
