<div class="container mt-4">
  <%= form_with(model: tip_calculation) do |form| %>
    <% if tip_calculation.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(tip_calculation.errors.count, "error") %> prohibited this tip calculation from being saved:</h4>
        <ul>
          <% tip_calculation.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :bill_amount, class: "form-label" %>
      <%= form.number_field :bill_amount, class: "form-control", required: true, min: 0 %>
    </div>

    <div class="mb-3">
      <%= form.label :tip_percentage, class: "form-label" %>
      <%= form.number_field :tip_percentage, class: "form-control", min: 0, max: 100 %>
    </div>

    <div class="mb-3">
      <%= form.label :num_people, class: "form-label" %>
      <%= form.number_field :num_people, class: "form-control", required: true, min: 1 %>
    </div>

    <div class="d-flex justify-content-end">
      <%= form.submit "Calculate Tip", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
