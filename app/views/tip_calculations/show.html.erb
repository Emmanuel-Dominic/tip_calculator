<div class="container mt-4">
  <% if notice.present? %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <%= render @tip_calculation %>

  <div class="mt-4">
    <%= link_to "Edit", edit_tip_calculation_path(@tip_calculation), class: "btn btn-secondary" %>
    <%= link_to "Back", tip_calculations_path, class: "btn btn-primary" %>

    <%= button_to "Delete", @tip_calculation, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
  </div>
</div>
